<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="SGE_PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>com.sge.entity.Materia</class>
    <class>com.sge.entity.Aula</class>
    <class>com.sge.entity.Horario</class>
    <class>com.sge.entity.HorarioSesion</class>
    <class>com.sge.entity.Profesor</class>
    <class>com.sge.entity.Registro</class>
    <class>com.sge.entity.Sesion</class>
    <class>com.sge.entity.Estudiante</class>
    <class>com.sge.entity.GrupoUsuario</class>
    <class>com.sge.entity.Usuario</class>
    <class>com.sge.entity.Grupo</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/escuela?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="computadora"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
